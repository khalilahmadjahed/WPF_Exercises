<Window x:Class="WPF_Exercises.CheckBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Exercises"
        mc:Ignorable="d"
        Title="CheckBox" Height="450" Width="800">
    <StackPanel>
        <Label FontWeight="Bold">Pizza Toppings</Label>
        <CheckBox Name="cbCheckAll" IsThreeState="True" Checked="cbCheckedAll" Unchecked="cbCheckedAll">Add all</CheckBox>

        <StackPanel Margin="20">
            <CheckBox Name="cbSalami" Checked="cbCheckedSingle" Unchecked="cbCheckedSingle">
                <TextBlock>Salami<Run FontWeight="Bold" Foreground="Red">Spicy</Run></TextBlock>
            </CheckBox>
            <CheckBox Name="cbMushrooms" Content="Mushrooms" Checked="cbCheckedSingle" Unchecked="cbCheckedSingle"/>
            <CheckBox Name="cbExtraMozzarella" Content="Extra Mozzarella" Checked="cbCheckedSingle" Unchecked="cbCheckedSingle"/>  
        </StackPanel>

    </StackPanel>
</Window>
