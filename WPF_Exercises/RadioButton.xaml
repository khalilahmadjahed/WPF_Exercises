<Window x:Class="WPF_Exercises.RadioButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Exercises"
        mc:Ignorable="d"
        Title="RadioButton" Height="395" Width="497">
    <StackPanel Margin="10">
        <TextBlock FontWeight="Bold" FontSize="22">Do You Like Me?</TextBlock>
        <RadioButton Margin="0,0,0,5" Checked="yes_chechked">
            <WrapPanel>
                <Rectangle Width="14" Height="14" Fill="Green"/>
                <TextBlock Foreground="Green" Margin="5,0,0,0">Yes</TextBlock>
            </WrapPanel>
        </RadioButton>
        <RadioButton Margin="0,0,0,5" Checked="no_checked">
            <WrapPanel>
                <Rectangle Width="14" Height="14" Fill="Red"/>
                <TextBlock Foreground="Red" Margin="5,0,0,0">No</TextBlock>
            </WrapPanel>
        </RadioButton>
        <RadioButton Margin="0,0,0,5" Checked="maybe_checked">
            <WrapPanel>
                <Rectangle Width="14" Height="14" Fill="Gray"/>
                <TextBlock Foreground="Gray" Margin="5,0,0,0">Maybe</TextBlock>
            </WrapPanel>
        </RadioButton>
    </StackPanel>
</Window>
