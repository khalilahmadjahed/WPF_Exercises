<Window x:Class="WPF_Exercises.PasswordBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Exercises"
        mc:Ignorable="d"
        Title="PasswordBox" Height="450" Width="593">
    <StackPanel Margin="10">
        <Label>User Name: </Label>
        <TextBox Name="tbUserName"></TextBox>
        <Label>Password: </Label>
        <PasswordBox MaxLength="5" PasswordChar="*"></PasswordBox>
        <Button Margin="5" Click="btn_login">Login</Button>
    </StackPanel>
</Window>
